<Window x:Class="KcptunGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="374" Width="760" ResizeMode="NoResize" Title="KcptunGUI" WindowStartupLocation="CenterScreen">
    <Grid>
        <GroupBox x:Name="MainWindow_Logs" Header="日志" Margin="10,0,10,10" Height="100" VerticalAlignment="Bottom">
            <ScrollViewer x:Name="MainWindow_LogsView" Margin="0" Height="76" VerticalAlignment="Bottom">
                <TextBox x:Name="MainWindow_LogsText" IsTabStop="False" AllowDrop="False" IsReadOnly="True" IsUndoEnabled="False" TextWrapping="Wrap"/>
            </ScrollViewer>
        </GroupBox>
        <GroupBox x:Name="MainWindow_Prarms" Header="参数设定" Margin="10,10,10,0" VerticalAlignment="Top" Height="156">
            <Grid Margin="0,0,-2,0">
                <TextBlock Text="服务器及端口:" Height="20" Margin="125,10,0,0" FontSize="14" Width="95" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="0,1,0,0" />
                <TextBox x:Name="KcptunConfig_Server" AllowDrop="False" Height="20" Margin="225,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="185" Padding="0,1,0,0"/>
                <TextBlock Text="本地监听端口:" Height="20" Margin="417,10,0,0" FontSize="14" Width="95" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="0,1,0,0" />
                <TextBox x:Name="KcptunConfig_LocalPort" AllowDrop="False" Height="20" Margin="517,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="64" Padding="0,1,0,0"/>
                <TextBlock Text="模式:" Height="20" Margin="588,10,0,0" FontSize="14" Width="36" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="0,1,0,0" />
                <ComboBox x:Name="KcptunConfig_Mode" HorizontalAlignment="Left" Margin="629,10,0,0" VerticalAlignment="Top" Width="72" IsReadOnly="True" IsSynchronizedWithCurrentItem="True" Height="20" Padding="6,2,5,3" IsTabStop="False">
                    <ComboBoxItem Content="default"/>
                    <ComboBoxItem Content="normal" Padding="4,1"/>
                    <ComboBoxItem Content="fast"/>
                    <ComboBoxItem Content="fast2" IsSelected="True"/>
                    <ComboBoxItem Content="fast3"/>
                </ComboBox>
                <CheckBox x:Name="KcptunConfig_Compress" Content="启用压缩" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" FontSize="14" IsHitTestVisible="True" IsTabStop="False" Height="16" Width="76" IsChecked="True" ToolTip="提示: 关闭压缩可能会降低延迟。"/>
                <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="版本:" VerticalAlignment="Top" FontSize="14" Padding="0,1,0,0"/>
                <ComboBox x:Name="KcptunConfig_SystemBit" HorizontalAlignment="Left" Margin="46,10,0,0" VerticalAlignment="Top" Width="72" Height="20" IsReadOnly="True" IsSynchronizedWithCurrentItem="False" Padding="6,2,5,3" IsTabStop="False" SelectionChanged="KcptunConfig_SystemBit_SelectionChanged">
                    <ComboBoxItem Content="x86" IsSelected="True"/>
                    <ComboBoxItem Content="x86_64"/>
                </ComboBox>
            </Grid>
        </GroupBox>

    </Grid>
</Window>
