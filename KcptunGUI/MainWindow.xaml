<Window x:Class="KcptunGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="374" Width="720" ResizeMode="NoResize" Title="KcptunGUI" WindowStartupLocation="CenterScreen">
    <Grid>
        <GroupBox x:Name="MainWindow_Logs" Header="日志" Margin="10,0,10,10" Height="100" VerticalAlignment="Bottom">
            <ScrollViewer x:Name="MainWindow_LogsView" Margin="0" Height="76" VerticalAlignment="Bottom">
                <TextBox x:Name="MainWindow_LogsText" IsTabStop="False" AllowDrop="False" IsReadOnly="True" IsUndoEnabled="False" TextWrapping="Wrap"/>
            </ScrollViewer>
        </GroupBox>
        <GroupBox x:Name="MainWindow_Prarms" Header="参数设定" Margin="10,10,10,0" VerticalAlignment="Top" Height="156">
            <Grid Margin="0,0,-2,0">
                <TextBlock Text="服务器及端口: " Height="20" Margin="10,10,0,0" FontSize="14" Width="95" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="0,1,0,0" />
                <TextBox x:Name="KcptunConfig_Server" AllowDrop="False" Height="20" Margin="110,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="270" Padding="0,1,0,0"/>
                <TextBlock Text="本地监听端口: " Height="20" Margin="396,10,0,0" FontSize="14" Width="95" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="0,1,0,0" />
                <TextBox x:Name="KcptunConfig_LocalPort" AllowDrop="False" Height="20" Margin="496,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="64" Padding="0,1,0,0"/>
                <TextBlock Text="模式: " Height="20" Margin="569,10,0,0" FontSize="14" Width="36" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="0,1,0,0" />
                <ComboBox x:Name="KcptunConfig_Mode" HorizontalAlignment="Left" Margin="610,10,0,0" VerticalAlignment="Top" Width="64" IsReadOnly="True" IsSynchronizedWithCurrentItem="True">
                    <ComboBoxItem Content="default"/>
                    <ComboBoxItem Content="normal"/>
                    <ComboBoxItem Content="fast"/>
                    <ComboBoxItem Content="fast2" IsSelected="True"/>
                    <ComboBoxItem Content="fast3"/>
                </ComboBox>
                <CheckBox x:Name="KcptunConfig_Compress" Content="启用压缩" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" FontSize="14" IsHitTestVisible="True" IsTabStop="False" Height="16" Width="76" IsChecked="True" ToolTip="提示: 关闭压缩可能会降低延迟。"/>
            </Grid>
        </GroupBox>

    </Grid>
</Window>
