<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:RWC="clr-namespace:RagnaroksWPF.Controls"
>
    <Style TargetType="RWC:TitleBar">
        <Style.Setters>
            <Setter Property="Height" Value="24"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RWC:TitleBar">
                        <Grid>
                            <Image Cursor="{TemplateBinding Property=Cursor}"></Image>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>
</ResourceDictionary>
